<main>
    
        
          <div class="perfil2-container">
           <a href = "/"><h3 class = "back">Home</h3> </a>  
            <div class = "circle"></div>
            <h3 style = "color:white;">Bem-vindo, <%= user.name %></h3>
            <div class="information-container">
                <span class = "mb5-ml-10" style = "font-weight:bold;color:aliceblue;font-size:20px;">Seus dados: </span>
                
                <span class = "white"> Nome: <span style = "font-weight:bold;color:aliceblue;"> <%= user.name %> </span> </span>  
                <br>
                <span class = "white"> Email: <span  style = "font-weight:bold; color:aliceblue;"> <%= user.email %> </span> </span> 
                <br>
